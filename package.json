{
  "name": "qr-generator",
  "version": "1.0.0",
  "description": "A simple desktop app to generate high-quality QR codes.",
  "main": "main.js",
  "author": "ZexionWhite",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "keywords": [
    "Electron",
    "QR",
    "QR code",
    "Generator"
  ],
  "build": {
    "appId": "qr.generator.zxn",
    "productName": "QR Generator",
    "copyright": "Copyright Â© 2025 Zexion",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*"
    ],
    "win": {
      "icon": "resources/icon.png",
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "QR Generator"
    }
  },
  "devDependencies": {
    "electron": "^35.2.1",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "qrcode": "^1.5.4"
  }
}
