{
  "name": "qr-generator",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "build": {
  "appId": "qr.generator.zxn",
  "productName": "QR Generator",
  "directories": {
    "output": "dist"
  },
  "files": [
    "**/*"
  ],
